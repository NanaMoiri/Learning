<body>
  <div id="imagen_fondo">
    <%- include("partials/header") %>
      <main>
        <section class="row">
          <table class="col-xl-6">
            <thead>
              <td>
                <h2 class="text-center">CALCULA TU METABOLISMO BASAL</h2>
              </td>
            </thead>
            <tbody>
              <tr>
                <td>
                  <input type="radio" id="mujer" name="sexo" value="mujer" checked>
                  <label for="mujer">Mujer</label>
                  <input type="radio" id="hombre" name="sexo" value="hombre">
                  <label for="hombre">Hombre</label>
                </td>
              </tr>
              <tr>
                <td class="label">
                  <label for="edad">Edad</label>
                </td>
                <td>
                  <input type="number" id="edad" class="text-center" placeholder="edad(aÃ±os)">
                </td>
              </tr>
              <tr>
                <td class="label">
                  <label for="altura1">Altura</label>
                </td>
                <td>
                  <input type="number" id="altura1" class="text-center" placeholder="altura(cm)">
                </td>
              </tr>
              <tr>
                <td class="label">
                  <label for="peso1">Peso</label>
                </td>
                <td>
                  <input type="number" id="peso1" class="text-center" placeholder="peso(kg)">
                </td>
              </tr>
              <tr>
                <td id="actividades">
                  <input type="radio" id="sedentario" name="actividad" value="sedentario" checked>
                  <label for="sedentario">Sedentario</label>
                  <input type="radio" id="ligero" name="actividad" value="ligero">
                  <label for="ligero">Ligeramente activo</label>
                  <input type="radio" id="activo" name="actividad" value="activo" >
                  <label for="activo">Activo</label>
                  <input type="radio" id="muy_activo" name="actividad" value="muy_activo">
                  <label for="muy_activo">Muy activo</label>
                </td>
              </tr>
              <tr class="row">
                <td class="label">
                  <label for="tmb">Tu TMB es (kcal/dia)</label> 
                </td>
                <td>
                  <input type="number" id="tmb" class="text-center" placeholder="TMB"></td>
              </tr>
              <tr>
                <td>
                  <button>CALCULA</button></td>
                </td>
              </tr>
            </tbody>
          </table>
        
<!-- ----------------------------------------------------------------------------------- -->
          <table class="col-xl-6">
            <thead>
              <td>
                <h2 class="text-center">CALCULA TU IMC</h2>
              </td>
            </thead>
            <tbody>
              <tr>
                <td class="label">
                  <label for="altura2">Altura</label>
                </td>
                <td>
                  <input type="number" id="altura2" class="text-center" placeholder="altura(cm)">
                </td>
              </tr>
              <tr>
                <td class="label">
                  <label for="peso2">Peso</label>
                </td>
                <td>
                  <input type="number" id="peso2" class="text-center" placeholder="peso(kg)">
                </td>
              </tr>
              <tr>
                <td class="label">
                  <label for="imc">Tu IMC es</label>
                </td>
                <td>
                  <input type="number" id="imc" class="text-center" placeholder="IMC">
                </td>
              </tr>
              <tr>
                <td>
                  <button>CALCULA</button>
                </td>
              </tr>
            </tbody>
          </table>
        </section>
      </main>
    </div>
  <%- include("partials/footer") %>
